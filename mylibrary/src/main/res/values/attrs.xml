<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RoundImageView">
        <attr name="type" format="enum">
            <enum name="circle" value="1" />
            <enum name="round" value="2" />
        </attr>
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ShapeTextView">
        <attr name="touchSolidColor" format="color" />  <!--触摸时颜色-->
        <attr name="solidColor" format="color" />     <!--填充颜色-->
        <attr name="textRadius" format="dimension" />  <!--圆角弧度-->
        <attr name="topLeftRadius" format="dimension" />
        <attr name="topRightRadius" format="dimension" />
        <attr name="bottomLeftRadius" format="dimension" />
        <attr name="bottomRightRadius" format="dimension" />
        <attr name="stroke_Width" format="dimension" />  <!--边框宽度-->
        <attr name="stroke_Color" format="color" />  <!--边框颜色-->
        <attr name="strokeDashWidth" format="dimension" />  <!--边框为虚线  宽度-->
        <attr name="strokeDashGap" format="dimension" />   <!--边框为虚线  间隙-->
        <attr name="gradientStartColor" format="color" />   <!--渐变  开始颜色-->
        <attr name="gradientEndColor" format="color" />    <!--渐变  结束颜色-->
        <attr name="gradientCenterColor" format="color" />  <!--渐变  中间颜色-->
        <attr name="gradientUseLevel" format="boolean" />
        <attr name="gradientAngle" format="dimension" />  <!--渐变  角度-->
        <attr name="gradientOrientation">     <!--渐变  方向-->
            <enum name="BL_TR" value="0" />
            <enum name="BOTTOM_TOP" value="1" />
            <enum name="BR_TL" value="2" />
            <enum name="LEFT_RIGHT" value="3" />
            <enum name="RIGHT_LEFT" value="4" />
            <enum name="TL_BR" value="5" />
            <enum name="TOP_BOTTOM" value="6" />
            <enum name="TR_BL" value="7" />
        </attr>
        <attr name="shapeType">
            <enum name="LINEAR_GRADIENT" value="0" />
            <enum name="OVAL" value="1" />
            <enum name="LINE" value="2" />
            <enum name="RING" value="3" />
        </attr>
        <attr name="gradientType">     <!--默认linear-->
            <enum name="linear" value="0" />
            <enum name="radial" value="1" />
            <enum name="sweep" value="2" />
        </attr>
        <attr name="gradientRadius" format="dimension" />
    </declare-styleable>

</resources>